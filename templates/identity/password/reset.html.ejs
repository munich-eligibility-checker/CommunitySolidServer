<div id="input-partial">
  <h1>Passwort zurücksetzen</h1>
  <form method="post" id="mainForm">
    <p class="error" id="error"></p>

    <fieldset>
      <ol>
        <li>
          <label for="password">Neues Passwort</label>
          <input id="password" type="password" name="password" placeholder="Neues Passwort eingeben">
        </li>
        <li>
          <label for="confirmPassword">Neues Passwort bestätigen</label>
          <input id="confirmPassword" type="password" name="confirmPassword" placeholder="Passwort wiederholen">
        </li>
      </ol>
    </fieldset>

    <p class="actions"><button type="submit" name="submit" disabled>Passwort zurücksetzen</button></p>
  </form>
</div>
<div id="response-partial">
  <h1>Passwort zurückgesetzt</h1>
  <p>Ihr Passwort wurde erfolgreich zurückgesetzt.</p>
  <p class="actions"><button type="button" id="response-login-link">Anmelden</button></p>
</div>

<script>
  setVisibility('response-partial', false);

  (async() => {
    const controls = await fetchControls('<%= idpIndex %>');

    setRedirectClick('response-login-link', controls.html.password.login);

    const recordId = new URLSearchParams(location.search).get('rid');

    addPostListener(async() => {
      validatePasswordConfirmation('password');
      await postJsonForm(controls.password.reset, false, (json) => Object.assign(json, { recordId }));
      setVisibility('input-partial', false);
      setVisibility('response-partial', true);
    });
  })();
</script>
